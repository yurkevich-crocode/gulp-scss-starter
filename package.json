{
  "name": "gulp-scss-starter",
  "description": "Frontend development with pleasure",
  "author": "Vladislav Filimonov",
  "license": "GPL-3.0-only",
  "scripts": {
    "start": "gulp",
    "build": "gulp prod --production",
    "build:views": "gulp views --production",
    "build:styles": "gulp styles --production",
    "build:scripts": "gulp scripts --production",
    "build:images": "gulp images --production",
    "build:webp": "gulp webp --production",
    "build:sprites": "gulp sprites --production",
    "build:fonts": "gulp fonts --production",
    "build:favicons": "gulp favicons --production",
    "build:gzip": "gulp gzip --production",
    "build:assets": "gulp assets --production",
    "lint:views:fix": "prettier --write --parser html \"./src/views/**/*.html\" || exit 0",
    "lint:styles": "stylelint \"src/styles/**/*.scss\" || exit 0",
    "lint:styles:fix": "prettier --write \"src/styles/**/*.scss\" && stylelint --fix \"src/styles/**/*.scss\" || exit 0",
    "lint:scripts": "eslint \"src/scripts/**/*.js\" || exit 0",
    "lint:scripts:fix": "prettier --write \"./src/scripts/**/*.js\" && eslint --fix \"src/scripts/**/*.js\" || exit 0",
    "eclint": "eclint check ./src/views/**/*.html ./src/styles/**/*.scss ./src/scripts/**/*.js || exit 0",
    "eclint:fix": "eclint fix ./src/views/**/*.html ./src/styles/**/*.scss ./src/scripts/**/*.js || exit 0",
    "lint": "yarn lint:views:fix && yarn lint:styles:fix && yarn lint:scripts:fix || exit 0",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/eslint-parser": "^7.18.9",
    "@babel/preset-env": "^7.19.0",
    "@babel/register": "^7.18.9",
    "babel-loader": "^8.2.5",
    "browser-sync": "^2.27.10",
    "del": "6.1.1",
    "eclint": "^2.8.1",
    "eslint": "^8.23.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-debug": "^4.0.0",
    "gulp-favicons": "^3.0.0",
    "gulp-file-include": "^2.3.0",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "7.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svg-sprite": "^1.5.0",
    "gulp-watch": "^5.0.1",
    "gulp-webp": "^4.0.1",
    "husky": "^8.0.1",
    "imagemin-giflossy": "^5.1.10",
    "imagemin-jpeg-recompress": "^7.0.0",
    "imagemin-mozjpeg": "9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "6.0.0",
    "imagemin-zopfli": "^7.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "require-dir": "^1.2.0",
    "sass": "^1.54.8",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.21.0",
    "webpack": "^5.74.0",
    "webpack-stream": "^7.0.0",
    "yargs": "^17.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=14.18.0",
    "npm": "use yarn!",
    "yarn": ">=1.0.0"
  }
}
